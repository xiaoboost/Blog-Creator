    "markdown-it-sub": "^1.0.0",
    "markdown-it-sup": "^1.0.0",
    "md5": "^2.3.0",
    "memfs": "^3.2.0",
    "mime": "^2.5.2",
    "moment": "^2.29.1",
    "pinyin": "^2.9.1",
    "rimraf": "^3.0.2",
    "stylus": "^0.54.8",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3",
    "yaml": "^1.10.2"
  }
