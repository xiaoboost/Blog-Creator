{
  "name": "@blog/cli",
  "version": "1.0.0",
  "description": "blog build cli tool",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "bin": {
    "blog": "./bin/cli.js"
  },
