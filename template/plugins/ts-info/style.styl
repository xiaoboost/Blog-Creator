@import 'variable';

TextBlack = #383A42;

.code-block__lsp {
  &:hover [ls-info] {
    border-color: #747474;
  }
  
  [ls-info] {
    border-bottom: 1px dotted transparent;
    transition-timing-function: ease;
    transition: border-color .3s;
  }

  .lsp-comment {
    color: #A0A1A7;
    font-style: italic;
  }

  .lsp-keyword {
    color: #A626A4;
  }

  .lsp-string {
    color: #50A155;
  }

  .lsp-variable, .lsp-interface__property {
    color: TextBlack;
  }

  .lsp-constant, .lsp-number {
    color: #986801;
  }

  .lsp-operator, .lsp-primitive-type {
    color: #0184BC;
  }

  .lsp-interface__name {
    color: #C18401;
  }
}


.ls-info-box {
  position: fixed;
  font-size: 12px;
  font-family: font-mono;
  transform: translateY(14px);
  color: Black;
  border: 1px solid Gray;
  background-color: GrayLight;
  line-height: 1.5em;
  padding: 4px 6px;

  pre {
    margin: 0;
  }


  .keyword {
    color: #A626A4;
  }

  .operator {
    color: #0184BC;
  }

  .numericLiteral, .localName {
    color: #986801;
  }

  .stringLiteral {
    color: #50A14F;
  }

  .className,
  .interfaceName {
    color: #C98401;
  }

  .functionName {
    color: #4078F2;
  }

  .methodName {
    color: #4078F2;
  }

  .propertyName {
    color: #E45649;
  }
}
