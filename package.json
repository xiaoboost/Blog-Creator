{
  "name": "blog",
  "version": "3.0.0",
  "description": "个人博客",
  "author": "xiaoboost",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xiaoboost/blog"
  },
  "scripts": {
    "prepare": "pnpm run build:builder",
    "clear:builder": "rimraf ./builder",
    "dev:builder": "ts-node ./build/build.ts --development",
    "build:builder": "pnpm run clear:builder && ts-node ./build/build.ts --production",
    "clear:website": "rimraf ./dist",
    "dev:website": "node ./builder/index.js --development --server --watch",
    "build:website": "pnpm run clear:website && node ./builder/index.js --production",
    "lint": "eslint --quiet --no-error-on-unmatched-pattern --config ./.eslintrc.js {build,template,typings}/**/*.{ts,tsx,js,jsx}",
    "lint:fix": "eslint --fix --quiet --no-error-on-unmatched-pattern --config ./.eslintrc.js {build,template,typings}/**/*.{ts,tsx,js,jsx}"
  },
  "dependencies": {
    "@xiao-ai/utils": "^1.1.0",
    "chalk": "^4.1.1",
    "chokidar": "^3.5.1",
    "esbuild": "^0.12.2",
    "fast-glob": "^3.2.5",
    "highlight.js": "^10.7.2",
    "katex": "^0.13.11",
    "koa": "^2.13.1",
    "markdown-it": "^12.0.6",
    "markdown-it-attrs": "^4.0.0",
    "markdown-it-container": "^3.0.0",
    "markdown-it-footnote": "^3.0.3",
    "markdown-it-mark": "^3.0.1",
    "markdown-it-sub": "^1.0.0",
    "markdown-it-sup": "^1.0.0",
    "md5": "^2.3.0",
    "memfs": "^3.2.2",
    "mime": "^2.5.2",
    "moment": "^2.29.1",
    "pinyin": "^2.10.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "stylus": "^0.54.8",
    "typescript": "^4.2.4",
    "vscode-oniguruma": "^1.5.1",
    "vscode-textmate": "^5.4.0",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@types/highlight.js": "^9.12.4",
    "@types/katex": "^0.11.0",
    "@types/koa": "^2.13.1",
    "@types/markdown-it": "12.0.1",
    "@types/md5": "^2.3.0",
    "@types/mime": "^2.0.3",
    "@types/node": "^15.6.1",
    "@types/pinyin": "^2.8.2",
    "@types/react": "^17.0.7",
    "@types/react-dom": "^17.0.5",
    "@types/stylus": "^0.48.34",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "eslint": "^7.27.0",
    "eslint-plugin-react": "^7.23.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.0.0",
    "tslib": "^2.2.0"
  }
}
