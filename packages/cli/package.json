{
  "name": "@blog/cli",
  "version": "1.0.0",
  "description": "blog build cli tool",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "bin": {
    "blog": "./bin/cli.js"
  },
  "scripts": {
    "clear": "rimraf ./dist",
    "dev": "tsc -w -p .",
    "build": "pnpm run clear && tsc -p .",
    "prepare": "pnpm run build",
    "lint": "eslint --quiet --no-error-on-unmatched-pattern --config ../../.eslintrc.js src/**/*.{ts,tsx,js,jsx}",
    "lint:fix": "eslint --fix --quiet --no-error-on-unmatched-pattern --config ../../.eslintrc.js src/**/*.{ts,tsx,js,jsx}"
  },
  "dependencies": {
    "@blog/template": "workspace:*",
    "@blog/utils": "workspace:*",
    "@types/fs-extra": "^9.0.8",
    "esbuild": "^0.9.5",
    "fs-extra": "^9.1.0"
  },
  "devDependencies": {
    "@blog/tsconfig": "workspace:*",
    "@types/blog": "workspace:*",
    "@types/koa": "^2.13.1",
    "@types/md5": "^2.3.0",
    "@types/mime": "^2.0.3",
    "@types/node": "^14.14.35",
    "@types/stylus": "^0.48.33",
    "chalk": "^4.1.0",
    "chokidar": "^3.5.1",
    "koa": "^2.13.1",
    "md5": "^2.3.0",
    "memfs": "^3.2.0",
    "mime": "^2.5.2",
    "moment": "^2.29.1",
    "rimraf": "^3.0.2",
    "stylus": "^0.54.8",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3",
    "yaml": "^1.10.2"
  }
}
