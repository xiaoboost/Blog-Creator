    "lint": "eslint --quiet --no-error-on-unmatched-pattern --config ../../.eslintrc.js src/**/*.{ts,tsx,js,jsx}",
    "lint:fix": "eslint --fix --quiet --no-error-on-unmatched-pattern --config ../../.eslintrc.js src/**/*.{ts,tsx,js,jsx}"
  },
  "devDependencies": {
    "@blog/tsconfig": "workspace:*",
    "@types/blog": "workspace:*",
    "@types/highlight.js": "^9.12.4",
    "@types/koa": "^2.13.1",
    "@types/markdown-it": "12.0.1",
    "@types/md5": "^2.3.0",
    "@types/mime": "^2.0.3",
    "@types/node": "^14.14.35",
    "@types/pinyin": "^2.8.2",
    "@types/stylus": "^0.48.33",
    "chalk": "^4.1.0",
    "chokidar": "^3.5.1",
    "esbuild": "^0.9.5",
    "highlight.js": "^10.6.0",
    "katex": "^0.13.0",
